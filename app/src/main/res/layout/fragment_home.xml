<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/FragmentHomeParentView"
    android:backgroundTint="@color/light_blue"
    android:background="@color/light_blue"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/HomeProfileArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/HomeProfilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@color/white" />

        <TextView
            android:id="@+id/HomeMenuUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="User"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/HomeProfileArea"
        android:id="@+id/HomeStatusArea"
        android:background="@color/infisible"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                android:background="@drawable/logincard"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_marginBottom="10dp"
                            android:textAlignment="textStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status :"
                            android:textStyle="bold"/>
                        <TextView
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buka"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00 - 16:00"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_margin="20dp"
                        android:background="@color/dark_oppacity_25"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="2dp"
                        android:layout_height="match_parent">

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="20dp"
        android:id="@+id/HomeQuickMenuAre"
        android:layout_below="@id/HomeStatusArea"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang di aplikasi pelayanan akademik Universitas Maritim Raja Ali Haji"
            android:textAlignment="center"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/logo_umrah"/>
        </LinearLayout>

        <TextView
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Menu Cepat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@color/white"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/formicon"
                    android:id="@+id/shortcutForm"
                    android:layout_width="50dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Isi Form"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/profile"
                    android:id="@+id/shortcutProfile"
                    android:layout_width="50dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Profil"
                    android:textAlignment="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/reset_password"
                    android:id="@+id/shortcutSecurity"
                    android:layout_width="50dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Secure"
                    android:textAlignment="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/logout"
                    android:id="@+id/shortcutLogout"
                    android:layout_width="50dp"
                    android:cropToPadding="true"
                    android:scaleType="centerCrop"
                    android:layout_height="50dp"/>
                <TextView
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Logout"
                    android:textAlignment="center"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/infisible"
        android:layout_below="@+id/HomeQuickMenuAre"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="15dp"
                android:background="@drawable/generalcard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:drawableLeft="@drawable/ic_baseline_campaign_24"
                    android:id="@+id/HomeMarqueArea"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:text="Pengumuman "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:src="@color/dark_oppacity_25"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/HomePengumumanArea"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
    </LinearLayout>


</RelativeLayout>